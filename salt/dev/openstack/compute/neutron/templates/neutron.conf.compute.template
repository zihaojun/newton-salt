[DEFAULT]
debug=false
verbose=false
core_plugin = ml2
service_plugins = router
api_paste_config = /etc/neutron/api-paste.ini
auth_strategy = keystone
rpc_backend = neutron.openstack.common.rpc.impl_kombu
rabbit_hosts={{ RABBIT }}
rabbit_userid={{ RABBIT_USER }}
rabbit_password={{ RABBIT_PASS }}
rabbit_retry_interval=1
rabbit_retry_backoff=2
rabbit_max_retries=0
rabbit_durable_queues=false
rabbit_ha_queues=true
notification_driver = neutron.openstack.common.notifier.rpc_notifier

allow_overlapping_ips = True
[quotas]
[agent]
root_helper = sudo neutron-rootwrap /etc/neutron/rootwrap.conf
[keystone_authtoken]
auth_uri = http://{{VIP}}:5000/v2.0
identity_uri = http://{{VIP}}:35357
admin_tenant_name = service
admin_user = {{AUTH_ADMIN_NEUTRON_USER}}
admin_password = {{AUTH_ADMIN_NEUTRON_PASS}}
[database]
connection = mysql://{{MYSQL_NEUTRON_USER}}:{{MYSQL_NEUTRON_PASS}}@{{VIP}}/{{MYSQL_NEUTRON_DBNAME}}
[service_providers]
