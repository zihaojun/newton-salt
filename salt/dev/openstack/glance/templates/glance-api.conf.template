[DEFAULT]
bind_host = {{ IPADDR }}
bind_port = 9292
registry_host = {{ IPADDR }}
registry_port = 9191
registry_client_protocol = http
notifier_strategy=noop
rabbit_hosts={{ RABBIT }} 
rabbit_userid={{ RABBIT_USER }}
rabbit_password={{ RABBIT_PASS }}
rabbit_retry_interval=1
rabbit_retry_backoff=2
rabbit_max_retries=0
rabbit_durable_queues=false
rabbit_ha_queues=true

workers = 4
api_limit_max = 1000
limit_param_default = 1000

notification_driver = messaging
[glance_store]
default_store = file
filesystem_store_datadir=/var/lib/glance/images/

[database]
connection = mysql://{{MYSQL_GLANCE_USER}}:{{MYSQL_GLANCE_PASS}}@{{VIP}}/{{MYSQL_GLANCE_DBNAME}}
max_pool_size=10
max_retries=-1
max_overflow=20

[keystone_authtoken]
auth_uri = http://{{VIP}}:5000/v2.0
identity_uri = http://{{VIP}}:35357
admin_user = {{AUTH_ADMIN_GLANCE_USER}}
admin_password = {{AUTH_ADMIN_GLANCE_PASS}}
admin_tenant_name = service

[paste_deploy]
flavor = keystone
