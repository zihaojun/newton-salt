[DEFAULT]
bind_host = {{IPADDR}} 
bind_port = 9191
rabbit_hosts={{VIP}}:5673
rabbit_retry_interval=1
rabbit_retry_backoff=2
rabbit_max_retries=0
rabbit_durable_queues=false
rabbit_ha_queues=true

[database]
connection = mysql://{{MYSQL_GLANCE_USER}}:{{MYSQL_GLANCE_PASS}}@{{VIP}}/{{MYSQL_GLANCE_DBNAME}}
max_pool_size=10
max_retries=-1
max_overflow=20

[keystone_authtoken]
auth_uri = http://{{VIP}}:5000/v2.0
identity_uri = http://{{VIP}}:35357
admin_user = {{AUTH_ADMIN_GLANCE_USER}}
admin_password = {{AUTH_ADMIN_GLANCE_PASS}}
admin_tenant_name = service

[paste_deploy]
flavor = keystone
