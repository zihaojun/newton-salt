[DEFAULT]
auth_strategy=keystone

rpc_backend=cinder.openstack.common.rpc.impl_kombu
rabbit_hosts={{ VIP }}:5673
rabbit_retry_interval=1
rabbit_retry_backoff=2
rabbit_max_retries=0
rabbit_durable_queues=false
rabbit_ha_queues=true

{% if BACKENDS == 'glusterfs' %}
glusterfs_shares_config=/etc/cinder/glusterfs_shares
glusterfs_mount_point_base=/var/lib/cinder/mnt
volume_driver=cinder.volume.drivers.glusterfs.GlusterfsDriver
{% elif BACKENDS == 'ceph' %}
{% endif %}

enable_v1_api=true
enable_v2_api=false
osapi_volume_listen={{ IPADDR }}
osapi_volume_listen_port=8776
osapi_volume_workers=2
control_exchange = cinder
notification_driver=cinder.openstack.common.notifier.rpc_notifier
glance_api_servers={{ VIP }}:9292
glance_num_retries = 300
glance_request_timeout = 5000
host={{ IPADDR }}
[database]
connection=mysql://{{MYSQL_CINDER_USER}}:{{MYSQL_CINDER_PASS}}@{{VIP}}/{{MYSQL_CINDER_DBNAME}}
max_pool_size=10
max_retries=-1
max_overflow=20

[keystone_authtoken]
admin_tenant_name=service
auth_uri = http://{{VIP}}:5000/v2.0
identity_uri = http://{{VIP}}:35357
admin_user={{AUTH_ADMIN_CINDER_USER}}
admin_password={{AUTH_ADMIN_CINDER_PASS}}
