[DEFAULT]
debug=False
rpc_backend=ceilometer.openstack.common.rpc.impl_kombu
rabbit_hosts={{ VIP }}:5673
rabbit_ha_queues=true
rabbit_retry_interval=1
rabbit_retry_backoff=2
rabbit_max_retries=0
rabbit_durable_queues=false
auth_strategy = keystone
collector_workers = 2
notification_workers = 2
[api]
host={{IPADDR}}
pecan_debug=False
[database]
connection = mongodb://{{MONGODB_CEILOMETER_USER}}:{{MONGODB_CEILOMETER_PASS}}@{{VIP}}:27017/{{MONGODB_CEILOMETER_DBNAME}}
time_to_live=604800
use_tpool=True
max_pool_size=10
max_retries=-1
max_overflow=20
[publisher]
metering_secret = {{METERING_SECRET}}
[keystone_authtoken]
admin_user = {{AUTH_ADMIN_CEILOMETER_USER}}
admin_tenant_name = service
auth_uri = http://{{VIP}}:5000/v2.0
identity_uri = http://{{VIP}}:35357
admin_password = {{AUTH_ADMIN_CEILOMETER_PASS}}
[service_credentials]
os_auth_url = http://{{VIP}}:5000/v2.0
os_username = {{AUTH_ADMIN_CEILOMETER_USER}}
os_tenant_name = service
os_password = {{AUTH_ADMIN_CEILOMETER_PASS}}
